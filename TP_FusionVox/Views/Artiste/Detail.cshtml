@model Artiste;
@{
    ViewData["Title"] = "Details";
}

<main class="container">

     <!--intro hero-->
    <div class="row marge_bot_titre_Details text-center align-items-center ">

            <!--Tire hero-->
        <div class="col">
            <h1 class="h0 shadow-tittre ">
                @Model.Nom @if (Model.EstVedette)
                {
                  <i class="fa-solid fa-star fa-lg"> </i>
                }
            </h1>
        </div>
    </div>
    <div class="container-fluid">

        <div class="row justify-content-center p1">
            <div class="col col-lg-10 col-xl-8">
                <div class="position-relative">
                    <video class="w-100 dust_video" autoplay loop muted>
                        <source src="/Video/dust.mp4" type="video/mp4">
                    </video>

                    <div class="form-check btn-ajouter-coeur-card-position">
                        <form asp-controller="Favoris" asp-action="Favoris" method="post">
                            <button type="submit" class="fa-solid fa-heart-circle-plus fa-2xl btn-heart-retirer">
                            </button>
                            <div>
                                <input type="hidden" name="Id" value="@Model.Id"> <!--Input Hidden nomArtiste-->
                            </div>
                        </form>
                    </div>
                    <div class="nom_artiste_superpose">
                        <h1 class="h3">@Model.Nom</h1>
                        <div class="divider-2 mb-3 "></div><!--devider linear gradient cian-->
                    </div>
                    <div class="row text-center detail_artiste_superpose ms-0 d-none d-md-flex">
                        <div class="col-md-4">
                            <i class="fa-solid fa-location-dot fa-xl icons-rs"></i>
                            <p class="p2">
                                Pays <br>
                                <span class="infoSpan">
                                    @Model.Pays
                                </span>
                            </p>
                            <div class="divider-2 mb-3 "></div><!--devider linear gradient cian-->
                        </div>
                        <div class="col-md-4">
                            <i class="fa-solid fa-microphone-lines fa-xl icons-rs"></i>
                            <p class="p2">
                                Genre <br>
                                <span class="infoSpan">
                                    @Model.GenreMusical.Nom
                                </span>
                            </p>
                            <div class="divider-2 mb-3 "></div><!--devider linear gradient cian-->
                        </div>
                        <div class="col-md-4">
                            <i class="fa-solid fa-user-tie fa-xl icons-rs"></i>
                            <p class="p2">
                                Agent <br>
                                <span class="infoSpan">
                                   @Model.Agent
                                </span>
                            </p>
                            <div class="divider-2 mb-3 "></div><!--devider linear gradient cian-->
                         </div>
                    </div>

                        <!-- <div class="row">
                      <div class="col-8 col-md-6 col-lg-4"> -->
                    <div class="RS-Details row justify-content-center">
                        <nav class="text-center my-2">
                            <a href="https://www.facebook.com/"><i class="fa-brands fa-facebook fa-lg"></i></a>
                            <a href="https://www.youtube.com/"><i class="fa-brands fa-youtube fa-lg"></i></a>
                            <a href="https://www.Instagram.com/"><i class="fa-brands fa-instagram fa-lg"></i></a>
                            <a href="https://music.apple.com/"><i class="fa-brands fa-deezer fa-lg"></i></a>
                            <a href="https://www.Spotify.com/"><i class="fa-brands fa-spotify fa-lg"></i></a>
                        </nav>
                    </div>
                    <!-- </div>

                    </div> -->
                </div>

                <div class="biography">
                    <p>
                       @Model.Biographie
                    </p>
                        <!--Biographie colapse-->
                    <p class="text-center">
                        <button class="btn-reinitialiser mb-3" type="button" data-bs-toggle="collapse" data-bs-target="#infoplus" aria-expanded="false" aria-controls="InfoPlus">
                            Détails de l'artiste <i class="fa-solid fa-chevron-down"></i>
                        </button>
                    </p>
                    <div class="collapse" id="infoplus">
                        <div class="cardul card-body">
                              <!--tableau details-->
                            <div class="table-responsive-sm">
                                <table class="table table-borderless">
                                    <Caption>Détails du artiste</Caption>
                                    <tbody>
                                        <tr>
                                            <th>Nom :</th>
                                            <td>@Model.Nom</td>
                                        </tr>
                                        <tr>
                                            <th>Pays</th>
                                            <td>@Model.Pays</td>
                                        </tr>
                                        <tr>
                                            <th>Agent</th>
                                            <td>@Model.Agent</td>
                                        </tr>
                                        <tr>
                                            <th>Date de début</th>
                                            <td>@Model.DebutCarrier.ToString("MMM yyyy")</td>
                                        </tr>
                                        <tr>
                                            <th>Nombre de chansons</th>
                                            <td>@Model.NbChansons</td>
                                        </tr>
                                        <tr>
                                            <th>Genre de musique</th>
                                            <td>@Model.GenreMusical.Nom</td>
                                        </tr>
                                        <tr>
                                            <th>Nombres d'abonnees'</th>
                                            <td>@Model.NbAbonnees</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
