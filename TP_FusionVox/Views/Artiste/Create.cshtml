@model TP2.ViewModels.NewArtisteVM
@{
    ViewData["Title"] = "Create";
}
<main class="container">
<div class="container-fluid">
    <div class="row justify-content-around text-center">
        <div class="col col-lg-10 col-xl-8">
            <h1 class="h0">AJOUTER UN ARTISTE</h1>
            <div class="divider-2 mb-3 "></div><!--devider linear gradient cian-->
            <br>
            <!--Form ajouter artiste-->
            <form asp-controller="Artiste" asp-action="Create" method="post" class="text-start p1">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <!--Vedtte switch-->
                <div class="row justify-content-center ">
                    <div class="col col-md-8 col-lg-7 col-xl-6 mb-3">
                        <div class="form-check form-switch form-check-reverse">
                            <label class="form-check-label" asp-for="EstVedette"> </label>
                            <input class="form-check-input" type="checkbox" role="switch" asp-for="EstVedette" value=true checked>
                            <span asp-validation-for="EstVedette" class="text-danger"></span>

                        </div>
                    </div>
                </div>

                <!--Nom Artiste-->
                <div class="row justify-content-center">
                    <div class="col col-md-8 col-lg-7 col-xl-6 ">
                        <label asp-for="Nom" class="form-label"></label>
                        <input type="text" class="form-control" asp-for="Nom" placeholder="Ex: Eminem">
                        <span asp-validation-for="Nom" class="text-danger"></span>
                    </div>
                </div>

                <!--Pays Artiste-->
                <div class="row justify-content-center">
                    <div class="col col-md-8 col-lg-7 col-xl-6 ">
                        <label asp-for="Pays" class="form-label"></label>
                        <input type="text" class="form-control" asp-for="Pays" placeholder="Ex: Canada">
                        <span asp-validation-for="Pays" class="text-danger"></span>
                    </div>
                </div>

                <!--Agent-->
                <div class="row justify-content-center">
                    <div class="col col-md-8 col-lg-7 col-xl-6 ">
                        <label asp-for="Agent" class="form-label"></label>
                        <input type="text" class="form-control" asp-for="Agent" placeholder="Ex: Cristi Ochiu">
                        <span asp-validation-for="Agent" class="text-danger"></span>
                    </div>
                </div>

                <!--Date de début de la carrière-->
                <div class="row justify-content-center">
                    <div class="col col-md-8 col-lg-7 col-xl-6 ">
                        <label asp-for="DebutCarrier" class="form-label"></label>
                        <input type="date" class="form-control" asp-for="DebutCarrier">
                        <span asp-validation-for="DebutCarrier" class="text-danger"></span>

                    </div>
                </div>

                <!--Nombre de chansons-->
                <div class="row justify-content-center">
                    <div class="col col-md-8 col-lg-7 col-xl-6">
                        <label asp-for="NbChansons" class="form-label"></label>
                        <input type="number" class="form-control" asp-for="NbChansons" min="0" placeholder="0">
                        <span asp-validation-for="NbChansons" class="text-danger"></span>
                    </div>
                </div>

                <!--Biographie-->
                <div class="row justify-content-center">
                    <div class="col col-md-8 col-lg-7 col-xl-6">
                        <div class="mb-3">
                            <label asp-for="Biographie" class="form-label"></label>
                            <textarea class="form-control" asp-for="Biographie" rows="3" placeholder="Ex: Saisir la biographie de l'artiste"></textarea>
                            <span asp-validation-for="Biographie" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!--Nom ImgUrl-->
                <div class="row justify-content-center">
                    <div class="col col-md-8 col-lg-7 col-xl-6 ">
                        <label asp-for="ImageURL" class="form-label"></label>
                        <input type="text" class="form-control" asp-for="ImageURL" placeholder="Ex: Eminem">
                        <span asp-validation-for="ImageURL" class="text-danger"></span>

                    </div>
                </div>

                <!--Genres de musique-->
                <div class="row justify-content-center">
                    <div class="col col-md-8 col-lg-7 col-xl-6">
                        <label asp-for="GenreMusicalId" class="form-label"></label>
                        <select class="form-select" asp-for="@Model.GenreMusicalId" aria-label="Genre de musique" asp-items="@Model.GenresSelectList">
                                <option selected value="">Choisissez parmi les options proposées</option>
                                @*<option value="POP">POP</option>
                                <option value="HIP-HOP">Hip-Hop</option>
                                <option value="ÉLECTRO">Électro</option>*@
                          
                        </select>
                        @*<span asp-validation-for="GenreMusical" class="text-danger"></span>*@
                            <span asp-validation-for="@Model.GenreMusicalId" class="text-danger"></span>
                    </div>

                </div>

              

                <div class="row justify-content-center text-center">
                    <div class="col col-md-8 col-xl-6 mb-2 mt-4">
                        <button type="submit" class="btn-rechercher">
                            Ajouter l'artiste
                            <i class="fa-solid fa-user-plus"></i>
                        </button>
                    </div>
                </div>
                <div class="row justify-content-center text-center">
                    <div class="col col-md-8 col-xl-6">
                        <button type="reset" class="btn-reinitialiser">
                            Réinitialiser <i class="fa-solid fa-arrow-rotate-left"></i>
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
</main>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}