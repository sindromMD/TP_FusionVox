@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a id="manage" class="p1 btn-menu" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                <i class="fa-solid fa-circle-user fa-lg"></i>
                @*@UserManager.GetUserName(User)!*@</a>
        </li>
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="p1 btn-menu" style="border:none">
                    <i class="fa-solid fa-right-from-bracket fa-flip-horizontal"></i>
                    OUT
                </button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="p1 btn-menu" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="p1 btn-menu" id="login" asp-area="Identity" asp-page="/Account/Login">
                IN
                <i class="fa-solid fa-right-to-bracket"></i>
                </a>
        </li>
    }
</ul>
