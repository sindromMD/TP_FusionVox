@model IEnumerable<TP_FusionVox.Models.Concert>

@{
    ViewData["Title"] = "Index";
}

<h1>Liste des concerts</h1>
<div class="col col-md-8 col-xl-6 my-3 ">
    <a class="btn-rechercher" asp-controller="Concerts" asp-action="Create">
        Ajouter
        <i class="fa-solid fa-plus"></i>
    </a>
</div>
<div class="table-responsive-sm">
<table class="table stripe hover order-column  " id="dataTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateConcert)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pays)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ville)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Scene)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NbTotalBillets)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NbBilletsVendu)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrixBillet)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateConcert)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pays)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ville)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Scene)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NbTotalBillets)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NbBilletsVendu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrixBillet)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
<script>
    
</script>