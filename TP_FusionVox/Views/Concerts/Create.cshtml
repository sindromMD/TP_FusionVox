@model Concert

@{
    ViewData["classeSuffixe"] = "Ajouter";
    ViewData["Title"] = "Ajouter un concert";
}

<main class="container">
    <div class="container-fluid">
        <div class="row justify-content-around text-center">
            <div class="col col-lg-10 col-xl-9">
                <h1 class="h0">Ajouter un concert</h1>
                <div class="divider-2 mb-3 "></div><!--devider linear gradient cian-->
                <br>
                <form asp-action="Create" class="text-start p1">
                 <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row justify-content-center">
                        <div class="col col-md-8 col-lg-7 col-xl-6 ">
                            <label asp-for="Nom" class="control-label"></label>
                            <input asp-for="Nom" class="form-control" />
                            <span asp-validation-for="Nom" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row justify-content-center">
                        <div class="col col-md-8 col-lg-7 col-xl-6 ">
                        <label asp-for="Description" class="control-label"></label>
                        <textarea asp-for="Description" class="form-control summernote"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row justify-content-center">
                        <div class="col col-md-8 col-lg-7 col-xl-6 ">
                        <label asp-for="ImageUrl" class="control-label"></label>
                        <input asp-for="ImageUrl" class="form-control" />
                        <span asp-validation-for="ImageUrl" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row justify-content-center">
                        <div class="col col-md-8 col-lg-7 col-xl-6 ">
                        <label asp-for="DateConcert" class="control-label"></label>
                        <input asp-for="DateConcert" class="form-control" />
                        <span asp-validation-for="DateConcert" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row justify-content-center">
                        <div class="col col-md-8 col-lg-7 col-xl-6 ">
                        <label asp-for="Pays" class="control-label"></label>
                        <input asp-for="Pays" class="form-control" />
                        <span asp-validation-for="Pays" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row justify-content-center">
                        <div class="col col-md-8 col-lg-7 col-xl-6 ">
                        <label asp-for="Ville" class="control-label"></label>
                        <input asp-for="Ville" class="form-control" />
                        <span asp-validation-for="Ville" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row justify-content-center">
                        <div class="col col-md-8 col-lg-7 col-xl-6 ">
                        <label asp-for="Scene" class="control-label"></label>
                        <input asp-for="Scene" class="form-control" />
                        <span asp-validation-for="Scene" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row justify-content-center">
                        <div class="col col-md-8 col-lg-7 col-xl-6 ">
                        <label asp-for="NbTotalBillets" class="control-label"></label>
                        <input asp-for="NbTotalBillets" class="form-control" />
                        <span asp-validation-for="NbTotalBillets" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row justify-content-center">
                        <div class="col col-md-8 col-lg-7 col-xl-6 ">
                        <label asp-for="PrixBillet" class="control-label"></label>
                        <input asp-for=" PrixBillet" class="form-control" />
                        <span asp-validation-for="PrixBillet" class="text-danger"></span>
                        </div>
                    </div>
            <partial name="_CreateEditBackToListReinitiliseButtonPartielle" model="Model" />
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}